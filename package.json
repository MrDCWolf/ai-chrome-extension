{
  "name": "ai-chrome-automation",
  "version": "0.1.0",
  "description": "Chrome Extension for AI-powered web automation",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:background && npm run build:content && npm run build:popup && npm run build:options && cp public/manifest.json dist/",
    "build:background": "vite build --config vite.background.config.ts",
    "build:content": "vite build --config vite.content.config.ts",
    "build:popup": "vite build --config vite.popup.config.ts",
    "build:options": "vite build --config vite.options.config.ts",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "icons": "node scripts/create-icons.cjs",
    "prebuild": "npm run icons",
    "postbuild": "mv -f dist/options/src/options/index.html dist/options/options.html && rm -rf dist/options/src && sed -i '' 's|src=\"/assets/options.js\"|src=\"assets/options.js\"|g' dist/options/options.html || true"
  },
  "dependencies": {
    "@langchain/openai": "^0.5.7",
    "langchain": "^0.3.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/chrome": "^0.0.260",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "text-encoding": "^0.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-web-extension": "^3.2.0",
    "web-streams-polyfill": "^4.1.0"
  }
}
